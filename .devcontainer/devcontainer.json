// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "int4t9",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "./docker-compose.dev.yml"
    ],
	"service": "int4t9",
    "shutdownAction": "stopCompose",
	"workspaceFolder": "/workspace",
	// "initializeCommand": "echo Initialize....",
	// "overrideCommand": true

	// https://containers.dev/features
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"mavenVersion": "latest",
			"installGradle": "true",
			"gradleVersion": "latest"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "os-provided"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/terraform:1": {},
		"ghcr.io/dhoeric/features/google-cloud-cli:1": {},
		"ghcr.io/joshuanianji/devcontainer-features/gcloud-cli-persistence:1": {}
	},

	// "mounts": [
	// 	"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind",
	// 	"source=vscode-extensions,target=/root/.vscode-server-insiders/extensions,type=volume"
	// ],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 
		"8082:8080"
	],

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"cweijan.vscode-postgresql-client2",
				"vmware.vscode-spring-boot",
				"vscjava.vscode-spring-initializr",
				"vscjava.vscode-spring-boot-dashboard",
				"redhat.java",
				"vscjava.vscode-java-debug",
				"vscjava.vscode-java-test",
				"vscjava.vscode-gradle",
				"vscjava.vscode-java-dependency",
				"VisualStudioExptTeam.vscodeintellicode",
				"redhat.fabric8-analytics",
				"bierner.markdown-preview-github-styles",
				"hashicorp.terraform",
				"oderwat.indent-rainbow",
				"yzhang.markdown-all-in-one",
				"esbenp.prettier-vscode",
				"chrmarti.regex",
				"Larrito.status-bar-permission-bits",
				"Gruntfuggly.todo-tree",
				"redhat.vscode-xml",
				"redhat.vscode-yaml",
				"matheusq94.TFS",
				"GoogleCloudTools.cloudcode"
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash /workspace/.devcontainer/postCreateCommand.sh"
}
